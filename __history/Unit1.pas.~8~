procedure TForm1.BtnAClick(Sender: TObject);
begin
 if verifica(BtnA.Caption) = True then
 begin
  ShowMessage('acertou');
  //toca a música de acerto
  //adiciona mais um ponto ao score(chama a função)
 end
 else
 begin
  //ShowMessage('errou');
  MediaPlayer1.Open;
  MediaPlayer1.FileName := ExtractFilePath(Application.ExeName) + 'sounds\m.mp3';
  MediaPlayer1.Open;
  MediaPlayer1.Play;
  //toca música de erro
  //adiciona mais um erro no score(chama a função)
 end;
end;

