{$R *.dfm}

function TForm1.aleatorio;
begin
  Result := Random(25);
end;

function TForm1.verifica(letra: string): Boolean;
begin
  if letra = Label1.Caption then
  begin
    Result := True
  end
  else
  begin
    Result := False
  end;
end;

procedure TForm1.BtnSortClick(Sender: TObject);
var alt: integer;
begin
  Label1.Caption := indice[aleatorio];
end;

procedure TForm1.BtnTClick(Sender: TObject);
begin
if verifica(BtnT.Caption) = True then
 begin
  ShowMessage('Acertou Mizerávi');
  //toca a música de acerto
  //adiciona mais um ponto ao score
 end
 else
 begin
  ShowMessage('Errou, disgraça');
  //toca música de erro
  //adiciona mais um erro no score
 end;
end;

